#jinja2: lstrip_blocks: True, trim_blocks: True
{% for item in common_firewall.filter | default([]) %}
  {% for service in item.services %}
    {% if "any" not in service.sources %}
create ZONE-{{ item.zone | upper }}-SERVICE-{{ service.name | upper }} hash:net family inet hashsize 1024 maxelem 65536 bucketsize 12
      {% for source in service.sources %}
        {% if "/" not in source %}
add ZONE-{{ item.zone | upper }}-SERVICE-{{ service.name | upper }} {{ source }}/32
        {% else %}
add ZONE-{{ item.zone | upper }}-SERVICE-{{ service.name | upper }} {{ source }}
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}
{% endfor %}
